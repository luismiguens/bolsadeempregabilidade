{% extends 'base_admin.html.twig' %}


{% block stylesheets %}
    {{ parent() }}


    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet">




{% endblock %}

{% block body %}



    <h1>Ofertas de Emprego</h1>


    <table id="example"  class="table table-bordered table-striped">
        <thead>
            <tr>
                <th style="width: 15%" data-field="title" data-filter-control="input">Title</th>
                <th style="width: 15%" data-field="description" data-filter-control="input">Description</th>
                <th style="width: 15%" data-field="area" data-filter-control="input">Area</th>
                <th style="width: 10%" data-field="year" data-filter-control="input">Ano</th>
                <th style="width: 15%" data-field="location" data-filter-control="input">Location</th>
                <th style="width: 15%" data-field="openings" data-filter-control="input">Openings</th>
                <th style="width: 15%">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for job in jobs %}
                <tr>
                    <td style="width: 15%"><a href="{{ path('admin_job_show', { 'id': job.id }) }}">{{ job.title }}</a></td>
                    <td style="width: 20%">{{ job.description }}</td>
                    <td style="width: 15%">{{ job.area }}</td>
                    <td style="width: 15%">{{ job.year }}</td>
                    <td style="width: 20%">{{ job.location }}</td>
                    <td style="width: 15%">{{ job.openings }}</td>
                    <td style="width: 15%">
                        <ul  class="list-inline">
                            <li class="list-inline-item">
                                <a  class="btn btn-outline-primary"  href="{{ path('admin_job_edit', { 'id': job.id }) }}">Editar Oferta</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>





    <ul class="list-inline">
        <li  class="list-inline-item">
            <a class="btn btn-primary" href="{{ path('admin_job_new') }}">Criar Oferta de Emprego</a>
        </li>
    </ul>
{% endblock %}


{% block javascripts %}
    {{ parent() }}


    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>


    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });

    </script>


{% endblock %}