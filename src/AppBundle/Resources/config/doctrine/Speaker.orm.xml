<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Speaker" table="speaker">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="80" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="image" type="string" column="image" length="80" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="profession" type="string" column="profession" length="45" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="presentation" type="text" column="presentation" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="linkedin" type="string" column="linkedin" length="80" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="twitter" type="string" column="twitter" length="80" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="google" type="string" column="google" length="80" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
<!--    <field name="updatedAt" type="string" column="updated_at" length="45" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>-->
    
    <field name="updatedAt" type="datetime" column="updated_at" nullable="true"/>

  
    <many-to-many field="years" target-entity="Year" inversed-by="speakers" fetch="LAZY">
      <join-table name="speaker_year">
        <join-columns>
          <join-column name="speaker_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="year_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
